<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#eeeeee"

    tools:context="com.example.administrator.wo.wo_mywallet">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout style="@style/PersonalMainLayoutStyle"
            android:layout_margin="0dp">
            <RelativeLayout style="@style/PersonalNormalStyle"
                android:layout_margin="0dp"
                android:id="@+id/rl_huiwallet">

                <ImageView
                    style="@style/PersonalIconStyle"
                    android:id="@+id/imageView"
                    android:src="@drawable/pre"/>

                <TextView
                    style="@style/PersonalTextStyle"
                    android:layout_marginLeft="35dp"
                    android:text="我的钱包"
                    android:textColor="#0da17f"
                    android:textSize="20dp"
                    android:id="@+id/textView" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout style="@style/PersonalMainLayoutStyle"
            android:layout_margin="0dp">
            <View style="@style/PersonalLine" />
            <RelativeLayout style="@style/PersonalNormalStyle"
                android:layout_margin="10dp">

                <ImageView
                    style="@style/PersonalIconStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView4"
                    android:src="@drawable/balance"/>

                <TextView
                    style="@style/PersonalTextStyle"
                    android:layout_marginLeft="100dp"
                    android:text="账户余额"
                    android:id="@+id/textView13" />

                <TextView
                    style="@style/PersonalTextStyle"
                    android:layout_marginLeft="200dp"
                    android:text="0元"
                    android:id="@+id/textView14" />

                <ImageView
                    style="@style/PersonalRightIconStyle"
                    android:id="@+id/imageView5"
                    android:src="@drawable/android_list_idex"/>
            </RelativeLayout>
            <View style="@style/PersonalLine" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eeeeee"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/bt_cart_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#ffffff"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="充值"
                android:textSize="20dp"
                android:textColor="#000000" />

            <View
                android:layout_width="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="match_parent"
                android:background="#333333" />

            <TextView
                android:id="@+id/bt_cart_low"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="#ffffff"
                android:text="提现"
                android:textSize="20dp"
                android:textColor="#000000" />

            <View
                android:layout_width="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="match_parent"
                android:background="#333333" />
        </LinearLayout>
        <View style="@style/PersonalLine" />
        <TextView
            style="@style/PersonalCenterText"
            />
        <LinearLayout style="@style/PersonalMainLayoutStyle"

            android:layout_margin="0dp">

            <RelativeLayout style="@style/PersonalNormalStyle"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bank_card2"
                    android:layout_margin="10dp"
                    android:id="@+id/imageView3" />

                <TextView
                    style="@style/PersonalTextStyle"
                    android:layout_marginLeft="60dp"
                    android:text="我的银行卡"
                    android:id="@+id/textView2" />

                <ImageView
                    style="@style/PersonalRightIconStyle"
                    android:src="@drawable/android_list_idex" />

            </RelativeLayout>
            <View style="@style/PersonalLine" />
            <RelativeLayout style="@style/PersonalNormalStyle"
                android:layout_margin="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pass"

                    android:layout_marginLeft="3dp"
                    android:id="@+id/imageView2" />

                <TextView
                    style="@style/PersonalTextStyle"
                    android:layout_marginLeft="60dp"
                    android:text="支付密码"
                    android:id="@+id/textView4" />

                <TextView
                    style="@style/PersonalRightIconStyle"
                    android:layout_marginRight="25dp"
                    android:text="修改"
                    android:textSize="20dp"
                    android:textColor="#55ff55"
                    android:id="@+id/textView5" />

                <ImageView
                    style="@style/PersonalRightIconStyle"
                    android:src="@drawable/android_list_idex" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
